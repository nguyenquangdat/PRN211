
@model PagedList.IPagedList<Project.Models.Product>
@using PagedList.Mvc;
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.3/css/jquery.dataTables.css">

<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.js"></script>
 
<div class="container">


    <div class="row mb-3 mt-3">
        <div class="col-12">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">Image</th>
                        <th scope="col">Information</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td scope="row">
                                <a href="@Url.Action("Details", new {@productID=item.ProductID })">
                                    @if (item.TagID == 1)
                                    {<img src="@Url.Content("~/ProductImage/Adidas/" + item.Image)" width="300" height="250" />}
                                    @if (item.TagID == 2)
                                    {<img src="@Url.Content("~/ProductImage/Nike/" + item.Image)" width="300" height="250" />}
                                    @if (item.TagID == 3)
                                    {<img src="@Url.Content("~/ProductImage/Lacoste/" + item.Image)" width="300" height="250" />}
                                    @if (item.TagID == 4)
                                    {<img src="@Url.Content("~/ProductImage/MLB/" + item.Image)" width="300" height="250" />}
                                    @if (item.TagID == 5)
                                    {<img src="@Url.Content("~/ProductImage/Kenzo/" + item.Image)" width="300" height="250" />}
                                </a>
                            </td>
                            <td scope="row">
                                <center>
                                    <h4>@item.ProductName</h4>
                                    <h4 style="color:red">Price @item.ProductPrice</h4>
                                    <br />
                                    @Html.ActionLink("Add To Cart", "addToCart", new { productID = item.ProductID })
                                </center>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>



    <!-- Content here -->
    <div class="row mb-3">
        Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
    </div>
    <div class="row mb-3">


        @Html.PagedListPager(Model, page => Url.Action("Index",
            new { page }))
    </div>
</div>
<script>
    $(".table").DataTable();
</script>





